<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MarketingAppHJ.Cliente.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:main="clr-namespace:MarketingAppHJ.Cliente.Views.Aplicacion.MainPage"
    xmlns:details="clr-namespace:MarketingAppHJ.Cliente.Views.Aplicacion.DetailsPage"
    Shell.FlyoutBehavior="Flyout"
    Title="MarketingAppHJ.Cliente">

    <ShellContent
        Title="Catalogo"
        ContentTemplate="{DataTemplate main:MainPage}"
        Route="Catalogo" />
    <ShellContent 
        Title="Detalle"
        Route="detalles"
        ContentTemplate="{DataTemplate details:DetailsPage}" />

</Shell>
