<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <!-- REFERENCIA A ColoresApp -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ColoresApp.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TextPrimaryColorLight}"
                         Dark="{StaticResource TextPrimaryColorDark}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SubtitleLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TextSecondaryColorLight}"
                         Dark="{StaticResource TextSecondaryColorDark}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BodyLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TextPrimaryColorLight}"
                         Dark="{StaticResource TextPrimaryColorDark}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TextPrimaryColorLight}"
                         Dark="{StaticResource TextPrimaryColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource SurfaceColorLight}"
                         Dark="{StaticResource SurfaceColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="PlaceholderColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TextSecondaryColorLight}"
                         Dark="{StaticResource TextSecondaryColorDark}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource SurfaceColorLight}"
                         Dark="{StaticResource SurfaceColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TextPrimaryColorLight}"
                         Dark="{StaticResource TextPrimaryColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource PrimaryColorLight}"
                         Dark="{StaticResource PrimaryColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="White" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource SecondaryColorLight}"
                         Dark="{StaticResource SecondaryColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="White" />
    </Style>

    <Style x:Key="TertiaryButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource TertiaryColorLight}"
                         Dark="{StaticResource TertiaryColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="White" />
    </Style>

    <Style x:Key="CardBorderStyle" TargetType="Border">
        <!-- Fondo según tema -->
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding 
          Light="{StaticResource SurfaceColorLight}" 
          Dark="{StaticResource SurfaceColorDark}" />
            </Setter.Value>
        </Setter>

        <!-- Esquinas redondeadas -->
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10" />
            </Setter.Value>
        </Setter>

        <!-- Borde fino según tema -->
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke">
            <Setter.Value>
                <AppThemeBinding 
          Light="{StaticResource BorderColorLight}" 
          Dark="{StaticResource BorderColorDark}" />
            </Setter.Value>
        </Setter>

        <!-- Padding interno y margen externo -->
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />

        <!-- Sombra ligera para “elevar” -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow 
          Brush="Black" 
          Opacity="0.15" 
          Offset="2,2" 
          Radius="4" />
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="SearchBarContainerStyle" TargetType="Border">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="25" />
            </Setter.Value>
        </Setter>
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource SurfaceColorLight}"
                         Dark="{StaticResource SurfaceColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Margin" Value="20,10" />
        <Setter Property="Padding" Value="0" />
    </Style>

 
    <Style x:Key="BottomBarStyle" TargetType="Grid">
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource SurfaceColorLight}"
                         Dark="{StaticResource SurfaceColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0" />
    </Style>


    <Style x:Key="IconButtonStyle" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="WidthRequest" Value="30" />
        <Setter Property="HeightRequest" Value="30" />
    </Style>

    <Style x:Key="RoundedEntryContainerStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="25" />
            </Setter.Value>
        </Setter>
        <Setter Property="BackgroundColor">
            <Setter.Value>
                <AppThemeBinding Light="{StaticResource SurfaceColorLight}" Dark="{StaticResource SurfaceColorDark}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0,10" />
    </Style>

    <Style TargetType="Shell">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource HeaderBackgroundColor}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource HeaderIconColor}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource HeaderIconColor}" />
    </Style>
</ResourceDictionary>
