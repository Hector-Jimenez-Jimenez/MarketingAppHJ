<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketingAppHJ.Cliente.Views.Login.LoginPage.LoginPage"
             xmlns:vm="clr-namespace:MarketingAppHJ.Cliente.ViewModels.LoginPageViewModel"
             BackgroundColor="{DynamicResource Background}"
             Title="LoginPage">
    <ContentPage.BindingContext>
        <vm:LoginPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="16">

        <Entry
      Placeholder="Correo"
      Text="{Binding Email}"
      Keyboard="Email"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>

        <Entry
      Placeholder="Contraseña"
      Text="{Binding Password}"
      IsPassword="True"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>

        <Button
      Text="Iniciar sesión"
      Command="{Binding LoginCommand}"
      BackgroundColor="{DynamicResource Primary}"
      TextColor="{DynamicResource Secondary}"
      CornerRadius="10"
      HeightRequest="50"/>

        <HorizontalStackLayout
      HorizontalOptions="Center"
      Spacing="24">
            <Label
        Text="¿No tienes cuenta?"
        TextColor="{DynamicResource TextPrimaryOnSurface}"
        VerticalOptions="Center"/>
            <Button
        Text="Regístrate"
        Command="{Binding NavigateToRegisterPageCommand}"
        BackgroundColor="Transparent"
        TextColor="{DynamicResource Primary}"
        FontAttributes="Bold"/>
        </HorizontalStackLayout>

        <Button
      Text="¿Olvidaste tu contraseña?"
      Command="{Binding ResetPasswordCommand}"
      BackgroundColor="Transparent"
      TextColor="{DynamicResource Quintiary}"
      FontAttributes="Italic"/>

    </VerticalStackLayout>
</ContentPage>