<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:MarketingAppHJ.Cliente.Helper"
             x:DataType="vm:LoginPageViewModel"
             x:Class="MarketingAppHJ.Cliente.Views.Login.LoginPage.LoginPage"
             xmlns:vm="clr-namespace:MarketingAppHJ.Cliente.ViewModels.LoginPageViewModel">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- 1) Título principal -->
            <Label Text="{helpers:Translate Bienvenida}"
                   Style="{StaticResource TitleLabelStyle}"
                   HorizontalOptions="Center" />

            <!-- 2) Campo de correo -->
            <VerticalStackLayout Spacing="8">
                <Label Text="{helpers:Translate CorreoElectronico}"
                        Style="{StaticResource SubtitleLabelStyle}" />
                <Border Style="{StaticResource RoundedEntryContainerStyle}">
                    <Entry Placeholder="usuario@ejemplo.com"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryColorLight}, Dark={StaticResource TextPrimaryColorDark}}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryColorLight}, Dark={StaticResource TextSecondaryColorDark}}"
                           HeightRequest="50" />
                </Border>
            </VerticalStackLayout>

            <!-- 3) Campo de contraseña -->
            <VerticalStackLayout Spacing="8">
                <Label Text="{helpers:Translate Contraseña}"
                       Style="{StaticResource SubtitleLabelStyle}" />
                <Border Style="{StaticResource RoundedEntryContainerStyle}">
                    <Entry Placeholder="••••••••"
                           IsPassword="True"
                           Text="{Binding Password}"
                           BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryColorLight}, Dark={StaticResource TextPrimaryColorDark}}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryColorLight}, Dark={StaticResource TextSecondaryColorDark}}"
                           HeightRequest="50" />
                </Border>
            </VerticalStackLayout>

            <!-- 4) Botón Iniciar sesión -->
            <Button Text="{helpers:Translate IniciarSesion}"
                    Command="{Binding LoginCommand}"
                    Style="{StaticResource PrimaryButtonStyle}" />

            <!-- 5) Enlaces para registrar o recuperar contraseña -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="16">
                <Label Text="{helpers:Translate NoCuenta}"
                       Style="{StaticResource BodyLabelStyle}" 
                       VerticalOptions="Center"/>

                <Button Text="{helpers:Translate Registrate}"
                        VerticalOptions="Center"
                        Command="{Binding NavigateToRegisterPageCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource SecondaryColorDark}}"
                        FontAttributes="Bold" />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="{helpers:Translate RecuperaContraseña}"
                        Command="{Binding ResetPasswordCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource SecondaryColorDark}}"
                        FontAttributes="Italic" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>