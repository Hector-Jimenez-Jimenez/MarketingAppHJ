<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MarketingAppHJ.Cliente.ViewModels.RegisterPageViewModel"
             x:Class="MarketingAppHJ.Cliente.Views.Login.RegisterPage.RegisterPage" >
    
    <ContentPage.BindingContext>
        <vm:RegisterPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="16">

        <Entry
      Placeholder="Nombre"
      Text="{Binding Name}"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>

        <Entry
Placeholder="Apellidos"
Text="{Binding Apellidos}"
BackgroundColor="{DynamicResource Secondary}"
TextColor="{DynamicResource TextPrimary}"
PlaceholderColor="{DynamicResource TextSecondary}"
HeightRequest="50"/>

        <Entry
      Placeholder="Correo"
      Text="{Binding Email}"
      Keyboard="Email"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>

        <Entry
      Placeholder="Contraseña"
      Text="{Binding Password}"
      IsPassword="True"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>
        

        <Entry
      Placeholder="Confirmar contraseña"
      Text="{Binding ConfirmPassword}"
      IsPassword="True"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>

        <Button
      Text="Crear cuenta"
      Command="{Binding RegisterCommand}"
      BackgroundColor="{DynamicResource Primary}"
      TextColor="{DynamicResource Secondary}"
      CornerRadius="10"
      HeightRequest="50"/>

        <Button
      Text="Volver al login"
      Command="{Binding CancelCommand}"
      BackgroundColor="Transparent"
      TextColor="{DynamicResource Quintiary}"
      FontAttributes="Italic"/>

    </VerticalStackLayout>
</ContentPage>