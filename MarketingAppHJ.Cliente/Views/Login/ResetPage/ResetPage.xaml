<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MarketingAppHJ.Cliente.ViewModels.ResetPageViewModel"
             x:Class="MarketingAppHJ.Cliente.Views.Login.ResetPage.ResetPage"
             Title="ResetPage">
    <ContentPage.BindingContext>
        <vm:ResetPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="16">

        <Entry
      Placeholder="Correo"
      Text="{Binding Email}"
      Keyboard="Email"
      BackgroundColor="{DynamicResource Surface}"
      TextColor="{DynamicResource TextPrimaryOnSurface}"
      PlaceholderColor="{DynamicResource TextSecondaryOnSurface}"
      HeightRequest="50"/>

        <Button
      Text="Enviar enlace"
      Command="{Binding RecoverCommand}"
      BackgroundColor="{DynamicResource Primary}"
      TextColor="{DynamicResource Secondary}"
      CornerRadius="10"
      HeightRequest="50"/>

        <Button
      Text="Volver al login"
      Command="{Binding CancelCommand}"
      BackgroundColor="Transparent"
      TextColor="{DynamicResource Quintiary}"
      FontAttributes="Italic"/>

    </VerticalStackLayout>
</ContentPage>