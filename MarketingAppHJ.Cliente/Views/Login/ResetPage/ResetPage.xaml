<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MarketingAppHJ.Cliente.ViewModels.ResetPageViewModel"
             xmlns:helper="clr-namespace:MarketingAppHJ.Cliente.Helper"
             Shell.NavBarIsVisible="True"
             x:DataType="vm:ResetPageViewModel"
             x:Class="MarketingAppHJ.Cliente.Views.Login.ResetPage.ResetPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Título -->
            <Label Text="{helper:Translate RecuperacionContraseña}"
                   Style="{StaticResource TitleLabelStyle}"
                   HorizontalOptions="Center" />

            <!-- Correo para recuperar -->
            <VerticalStackLayout Spacing="8">
                <Label Text="{helper:Translate CorreoElectronico}"
                       Style="{StaticResource SubtitleLabelStyle}" />
                <Border Style="{StaticResource RoundedEntryContainerStyle}">
                    <Entry Placeholder="usuario@ejemplo.com"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryColorLight}, Dark={StaticResource TextPrimaryColorDark}}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryColorLight}, Dark={StaticResource TextSecondaryColorDark}}"
                           HeightRequest="50"/>
                </Border>
            </VerticalStackLayout>

            <!-- Botón Enviar enlace -->
            <Button Text="{helper:Translate EnlaceRecuperacion}"
                    Command="{Binding ResetPasswordCommand}"
                    Style="{StaticResource PrimaryButtonStyle}" />

            <!-- Enlace para volver a Login -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="{helper:Translate RecuerdoContraseña}"
                       Style="{StaticResource BodyLabelStyle}" 
                       VerticalOptions="Center"/>

                <Button Text="{helper:Translate IniciarSesion}"
                        VerticalOptions="Center"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light={StaticResource PrimaryColorLight}, Dark={StaticResource PrimaryColorDark}}"
                        FontAttributes="Bold" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>